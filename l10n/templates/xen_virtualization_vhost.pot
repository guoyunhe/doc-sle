#: xen_virtualization_vhost.xml:742
#, no-c-format
msgid "Detach the USB device under controller 0 port 1:"
msgstr ""

#. Tag: screen
#: xen_virtualization_vhost.xml:745
#, no-c-format
msgid "&prompt.root;xl usbdev-detach test_vm 0 1"
msgstr ""


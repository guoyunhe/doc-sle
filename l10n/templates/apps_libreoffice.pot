msgid ""
"Start Firefox by selecting <menuchoice><guimenu>Applications</"
"guimenu><guimenu>Internet</guimenu> <guimenu>Firefox</guimenu></menuchoice>."
msgstr ""

#. Tag: para
#: apps_libreoffice.xml:668
#, no-c-format
msgid ""
"Go to the certificates preferences by opening the menu (<inlinemediaobject> "
"<textobject role=\"description\"><phrase>Three-lines button</phrase> </"
"textobject> <imageobject role=\"fo\"> <imagedata fileref=\"hamburger_button."
"svg\" width=\"0.8em\" format=\"svg\"/> </imageobject> <imageobject role="
"\"html\"> <imagedata fileref=\"hamburger_button-fallback.png\" width=\"1em\" "
"format=\"png\"/> </imageobject> </inlinemediaobject>), then select "
"<menuchoice><guimenu>Preferences</guimenu><guimenu>Advanced</guimenu> "
"<guimenu>Certificates</guimenu><guimenu>View Certificates</guimenu> </"
"menuchoice>."
msgstr ""

#. Tag: para
#: apps_libreoffice.xml:686
#, no-c-format
msgid ""
"Add your certificate by selecting <guimenu>Your Certificates</guimenu> and "
"clicking <guimenu>Import</guimenu> and then locate your certificate."
msgstr ""


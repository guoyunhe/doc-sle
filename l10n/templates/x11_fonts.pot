#: x11_fonts.xml:854
#, no-c-format
msgid "Aliases and Family Names Substitutions"
msgstr ""

#. Tag: term
#: x11_fonts.xml:857
#, no-c-format
msgid "Rule 4"
msgstr ""

#. Tag: screen
#: x11_fonts.xml:859
#, no-c-format

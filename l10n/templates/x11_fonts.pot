#, no-c-format
msgid ""
"<literal>Alegreya SC</literal>, <literal>Droid Serif</literal>, "
"<literal>serif</literal>, <literal>Liberation Serif</literal>, "
"<literal>STIXGeneral</literal>"
msgstr ""


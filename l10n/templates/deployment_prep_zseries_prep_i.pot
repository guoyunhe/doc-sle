#: deployment_prep_zseries_prep_i.xml:188
#, no-c-format
msgid "SERVERNAME"
msgstr ""

#. Tag: para
#: deployment_prep_zseries_prep_i.xml:191
#, no-c-format
msgid "The name of the server that hosts the share(s)."
msgstr ""


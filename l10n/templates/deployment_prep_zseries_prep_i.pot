#, no-c-format
msgid "DOMAIN"
msgstr ""

#. Tag: para
#: deployment_prep_zseries_prep_i.xml:170
#, no-c-format
msgid "Optional workgroup or active directory domain."
msgstr ""

#. Tag: replaceable
#: deployment_prep_zseries_prep_i.xml:176
#, no-c-format
msgid "USER"
msgstr ""

#. Tag: replaceable
#: deployment_prep_zseries_prep_i.xml:178
#, no-c-format
msgid "<replaceable>PW</replaceable>"
msgstr ""

#. Tag: para
#: deployment_prep_zseries_prep_i.xml:181
#, no-c-format
msgid ""
"Optional user name and password of a user who can access this server and its "
"share."
msgstr ""

